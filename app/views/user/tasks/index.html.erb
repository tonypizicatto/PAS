<%= form_for user_tasks_path, remote: true do |f| %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :project_id %><br>
    <%= f.collection_select :project_id, Project.all, :id, :name %>
  </div>

  <div class="actions">
    <%= f.submit 'Search', remote: true %>
  </div>
<% end %>

<div class="user_tasks">
  <%= render 'user/tasks/tasks', tasks: @tasks %>
</div>


